{% extends "_layouts/default.njk" %}

{% block content %}
<div class="column" style="max-width: 80%;">
  <table class="ui celled table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Link</th>
        <th>
          <a href="/app/affiliates/create"> <i class="icon plus"></i> Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      {% for affiliate in affiliates %}
        <tr>
          <td>{{ affiliate.title }}</td>
          <td>{{ affiliate.description }}</td>
          <td>{{ affiliate.link }}</td>
          <td>
            <a href="/app/affiliates/{{ affiliate._id }}">
              <i class="icon edit"></i>
            </a>
            <a href="/app/affiliates/{{ affiliate._id }}/destroy">
              <i class="icon trash"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
